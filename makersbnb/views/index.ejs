<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body data-spy="scroll" data-target=".navbar" data-offset="50" style="margin-top:100px;margin-left:0;margin-right:0;">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="row">
      <div class="col-sm-2">
      </div>
      <div class="col-sm-4">
        <ul class="nav navbar-nav">
          <li><a class="hometitle" href="home"> HOME </a></li>
          <li><a href="#section1">Section 1</a></li>
          <li><a href="#section2">Section 2</a></li>
          <li><a href="#section3">Section 3</a></li>
        </ul>
      </div>
      <div class="col-sm-4 signup">
        <ul class="nav navbar-nav">
          <% if (userName === "FLAG") { %>
            <li><a id="welcome_message" href="">Not signed in</a></li>
            <li><a href="">Sign In</a></li>
          <% } else { %>
            <li><a id="welcome_message" href="">Signed in as <%= userName %></a></li>
            <li><a id="signout" href="/signout">Sign Out</a></li></a></li>
          <% } %>
        </ul>
      </div>
      <div class="col-sm-2">
      </div>
    </div>
  </nav>

  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-8">
        <div class="row">
          <div class="container-fluid" >
            <div class="welcomemessage" >
              <h1>Welcome to EZ.sleep</h1><br>
            </div>
            <div class="welcomecomment">
              <h5>A website to make travelling abroad stress free. Choose from hundreds of locations worldwide, from bustling cities of America to the peace countryside of Italy</h5>
            </div>
          </div>
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
            
            <ol class="carousel-indicators">
              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
              <li data-target="#myCarousel" data-slide-to="1"></li>
              <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
              <div class="item active">
                <img src="rio.jpg" alt="Los Angeles">
              </div>

              <div class="item">
                <img src="chicago.jpg" alt="Chicago">
              </div>

              <div class="item">
                <img src="ny.jpg" alt="New York">
              </div>
            </div>

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <div id="section2" class="container-fluid">
            <div class="row">
            <h1>Listings</h1>
            <% listings.forEach(function(listing) { %>
              <div class="col-sm-6 listings">
                <ul id="list">
                  <li> <h4><%= " Location - " + listing.location %></li></h4>
                  <li> <h4><%= " Price/Night - £" + listing.price %></li></h4>
                  <li> <h4><%= " Guests - " + listing.maxPeople %></li></h4>
                </ul>
              </div>
              <% }) %>
            </div>
          </div>
          <div id="section3" class="container-fluid">
            <h1>Become a host</h1>
            <form method="post" action="/listing/new" id="PropertyForm">
              <label for="Location:">Location: </label>
              <input id="loco" type='text' label="Location:" name='location' placeholder="London">
              <br>
              <label for="Price/Night:">Price/Night: </label>
              <input id="price" type='text' label="Price/Night:" name='price' placeholder="£80">
              <br>
              <label for="Guests:">Guests: </label>
              <input id="guests" type='text' label="Guests:" name='guests' placeholder="2">
              <br>

              <input type="submit" name="Submit">
            </form>

          </div>
        </div>
      </div>
      <div class="col-sm-2">

      </div>
    </div>

  </body>
</html>
