<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  </head>
  <body data-spy="scroll" data-target=".navbar" data-offset="50" style="margin-top:100px;margin-left:0;margin-right:0;">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="row">
      <div class="col-sm-2">
      </div>
      <div class="col-sm-8">
        <ul class="nav navbar-nav">
          <li><a class="hometitle" href="home"> HOME </a></li>
          <li><a href="#section1">Section 1</a></li>
          <li><a href="#section2">Section 2</a></li>
          <li><a href="#section3">Section 3</a></li>
        </ul>
      </div>
      <div class="col-sm-2">
      </div>
    </div>
  </nav>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <form method="post" action="/listing/new" id="PropertyForm">
      <label for="Location:">Location: </label>
      <input id="loco" type='text' label="Location:" name='location' placeholder="London">
      <br>
      <label for="Price/Night:">Price/Night: </label>
      <input id="price" type='text' label="Price/Night:" name='price' placeholder="£80">
      <br>
      <label for="Guests:">Guests: </label>
      <input id="guests" type='text' label="Guests:" name='guests' placeholder="2">
      <br>
      <input type="submit" name="Submit">
    </form>
    <br>
    <ul id="list">
      <% listings.forEach(function(listing) { %>
        <li>
          <p> <%= 'Location - ' + listing.location + ' |' + ' Price/Night - £' + listing.price + ' |' + ' Guests - ' + listing.maxPeople %> </p>
        </li>
        <br>
      <% }) %>
    </ul>
  </body>
</html>
